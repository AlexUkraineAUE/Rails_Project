<h1 class="title is-1">All Genres</h1>

<%= form_with(url: search_genres_path, method: :get, local: true)  do |form|%>
       <div class="field is-grouped mb-5">
        <div class="control is-expanded">
            <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search For Genres') %>
        </div>
        <div class="control">
          <%= submit_tag('Search', class: "button is-primary")%>
        </div>
       </div>
      <% end %>

<ul>
  <% @genres.each do |genre| %>
    <li><%= link_to genre.name, genre_path(genre) %></li>
  <% end %>
</ul>

<%= paginate @genres %>